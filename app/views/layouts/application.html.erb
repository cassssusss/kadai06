<!DOCTYPE html>
<html>
  <head>
    <title>スケジュール管理アプリ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
<h1>

</h1>
  <body>
    <header>
      <h1><%= yield(:title) %></h1>
    </header>

    <div class="flash-messages">
      <% if flash[:notice] %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>